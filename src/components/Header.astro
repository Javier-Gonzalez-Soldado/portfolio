---
const navItems = [
    {
        title: "Inicio",
        label: "inicio",
        url: "/#inicio",
    },
    {
        title: "Experiencia",
        label: "experiencia",
        url: "/#experiencia",
    },
    {
        title: "Proyectos",
        label: "proyectos",
        url: "/#proyectos",
    },
    {
        title: "Sobre m√≠",
        label: "sobre-mi",
        url: "/#sobre-mi",
    },
];
---

<header
    class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2"
>
    <nav class="flex flex-row gap-x-10 rounded-xl px-4">
        {
            navItems.map((link) => (
                <a
                    class="relative block px-2 py-2 transition hover:text-lime-500 dark:hover:text-lime-400"
                    aria-label={link.label}
                    href={link.url}
                >
                    {link.title}
                </a>
            ))
        }
    </nav>
</header>

<style>
    nav {
        animation: nav-shadown 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
    }

    @keyframes nav-shadown {
        to {
            @apply shadow-lg ring-1 backdrop-blur bg-lime-800/60 dark:bg-lime-800/60 ring-white/10;
        }
    }
</style>
