---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import BriefCaseIcon from "../components/icons/BriefCase.astro";
import SocialPill from "../components/SocialPill.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ProjectsIcon from "../components/icons/Projects.astro";
import Projects from "../components/Projects.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";
import Hero from "../components/Hero.astro";
---

<Layout
    title="Portfolio de Javier González Soldado - Desarrollador y Programador web"
    description="Contrata a Javier González Soldado, Ingeniero Telemático y Estudiante del Máster de Desarrollo de Software Ágil para la Web de la Universidad de Alcalá. Apasionado por la tecnología y el desarrollo web. De Alcalá de Henares, España. Disponible para trabajar."
>
    <main class="max-w-[768px] mx-auto">
        <SectionContainer id="inicio" class="py-32">
            <Hero>
                <slot />
            </Hero>
        </SectionContainer>

        <SectionContainer id="experiencia" class="mb-32">
            <h2 class="text-3xl font-bold mb-8 flex gap-x-4 items-center">
                <BriefCaseIcon class="size-8" />
                Experiencia Laboral
            </h2>
            <Experience />
        </SectionContainer>

        <SectionContainer id="proyectos" class="mb-32">
            <h2 class="text-3xl font-bold mb-8 flex gap-x-4 items-center">
                <ProjectsIcon class="size-8" />
                Proyectos
            </h2>
            <Projects />
        </SectionContainer>

        <SectionContainer id="sobre-mi" class="mb-32">
            <h2
                class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
            >
                <ProfileCheck class="size-8" />
                Sobre mí
            </h2>
            <AboutMe />
        </SectionContainer>
    </main>
</Layout>
